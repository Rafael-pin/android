<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_pontos_o"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/et_pontos_o"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText6"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/tv_o"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/et_pontos_x"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/et_pontos_o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/tv_x"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText6"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o"
                />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:textSize="@dimen/bt_x_o" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:textSize="@dimen/bt_x_o" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/bt_7"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:layout_marginRight="20dp"
                android:textSize="@dimen/bt_x_o" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="@dimen/bt_width"
                android:layout_height="@dimen/bt_height"
                android:background="@drawable/button"
                android:fontFamily="casual"
                android:text=""
                android:textSize="@dimen/bt_x_o" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>